{
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "typecheck": "flow check --max-warnings=0",
    "lint": "eslint ./src ./tests ./benchmark ./*.js && npm run typecheck && npm run format",
    "lint:staged": "lint-staged && npm run typecheck",
    "format": "prettier --write \"packages/*/**/*\"",
    "test": "cross-env NODE_ENV=test karma start --single-run",
    "test:watch": "cross-env NODE_ENV=test karma start",
    "posttest": "cross-env SNAPSHOT=match rollup -c && [ -z \"$TRAVIS\" ] || codecov",
    "codecov": "codecov",
    "bench": "cross-env BENCHMARK=true karma start --single-run"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^6.2.9",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-inline-version": "^1.0.2",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.8.0",
    "babel-plugin-transform-es3-property-literals": "^6.8.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-jss": "^3.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.5.0",
    "lerna": "^2.11.0",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-size-snapshot": "^0.4.1",
    "rollup-plugin-uglify": "^3.0.0",
    "webpack": "^2.3.3",
    "codecov": "^1.0.1",
    "common-tags": "^1.4.0",
    "cross-env": "^3.1.3",
    "css.escape": "^1.5.1",
    "detect-browser": "^1.5.0",
    "es5-shim": "^4.5.9",
    "expect.js": "^0.3.1",
    "flow-bin": "^0.72.0",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-benchmark": "^0.6.0",
    "karma-benchmark-reporter": "^0.1.1",
    "karma-browserstack-launcher": "^1.1.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "lint-staged": "^3.2.2",
    "mocha": "^3.2.0",
    "pre-commit": "^1.1.3",
    "prettier": "^1.10.2",
    "rimraf": "^2.5.4",
    "zen-observable": "^0.6.0"
  },
  "lint-staged": {
    "**/*.{js,md,json}": [
      "prettier"
    ],
    "**/*.js": [
      "eslint"
    ]
  },
  "pre-commit": "lint:staged"
}
